package com.naver.erp;

import java.util.List;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class VacationDAOImpl implements VacationDAO {

	@Autowired
	private SqlSessionTemplate sqlSession;
	
	//===================================================
	public List<Map<String,String>> getVacationList(VacationSearchDTO vacationSearchDTO){
		
		List<Map<String,String>> vacationList = this.sqlSession.selectList(			
				"com.naver.erp.Vacation.getVacationList"	
				,vacationSearchDTO
		);
		
		return vacationList;
	}
	
	
	//===================================================
	public int vacationAllListTotCnt() {
		
		int vacationAllListTotCnt = this.sqlSession.selectOne(
				"com.naver.erp.Vacation.vacationAllListTotCnt"
			);
		
		return vacationAllListTotCnt;
	}
	
	
	//===================================================
	public int vacationListTotCnt(VacationSearchDTO vacationSearchDTO) {
		
		int vacationListTotCnt = this.sqlSession.selectOne(
				"com.naver.erp.Vacation.vacationListTotCnt"
				,vacationSearchDTO
			);
		
		return vacationListTotCnt;
	}
	
	
	
	
	//===================================================
	public List<Map<String,String>> getVacationUseList( String id ){
		
		List<Map<String,String>> vacationUseList = this.sqlSession.selectList(			
				"com.naver.erp.Vacation.getVacationUseList"	
				,id
		);
		
		return vacationUseList;
	}
	
	
	//===================================================
	public List<Map<String,String>> getVacationAllUseList(){
		
		List<Map<String,String>> vacationUseList = this.sqlSession.selectList(			
				"com.naver.erp.Vacation.getVacationUseList"	
		);
		
		return vacationUseList;
	}
	
	
	
	//===================================================
	public String getEmpName( String id ) {
		
		String empName = this.sqlSession.selectOne(			
				"com.naver.erp.Vacation.getEmpName"
				,id
		);
		
		return empName;
	}
	
	
	
	
	//===================================================
	public int vacationApply( Map<String,String> vacationApply ) {
		
		int vacationApplyCnt = this.sqlSession.insert(
				"com.naver.erp.Vacation.vacationApply"
				,vacationApply
		);
		
		return vacationApplyCnt;
	}
	
	
	
	
	//===================================================
	public Map<String,String> getApplyDetail( int vac_use_no ){
		
		Map<String,String> applyDetail = this.sqlSession.selectOne(
				"com.naver.erp.Vacation.vacationApplyDetail"
				,vac_use_no
		);
			
		return applyDetail;
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
