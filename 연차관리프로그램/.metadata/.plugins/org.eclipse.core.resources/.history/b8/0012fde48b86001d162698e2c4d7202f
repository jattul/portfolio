<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%@include file="/WEB-INF/views/common.jsp" %>  
    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>사원 휴가 결제</title>
<script>
	$(function(){
		$(".seachingResults").find("tr:eq(0)").nextAll().hover(
				function(){
					$(this).addClass("mouseOnTrBgC");
				}
				,function(i){
					$(this).removeClass("mouseOnTrBgC");
				}
		);
	})
	
	function detailClick( vac_use_no ){
		var obj = $("[name='vacationCheckDetailForm']");
		obj.find("[name='vac_use_no']").val(vac_use_no);
		document.vacationCheckDetailForm.submit();
	}
	
</script>
</head>
<body>
	<center>
	<div style="height:30px"></div>
	<h2>사원 휴가 결제</h2>
	<input type="button" value="메인페이지로 이동" onClick="goMain();">
    <form name="vacationCheck" action="/vacationCheck.do" method="post">
    	<div class="seachingResults">
        <table class="mainTable" border="1" cellpadding="5" cellspacing="0" style="border-collapse:collapse" align="center" width="600px">
            <tr>
                <th>순번</th>
                <th>제목</th>
                <th>신청일</th>
                <th>결제일</th>
                <th>진행상황</th>
            </tr>
            
            <c:forEach var="vacationCheck" items="${requestScope.vacationAllUseList}" varStatus="loopTagStatus">
	            	<tr style="cursor:pointer" onclick="detailClick(${vacationCheck.vac_use_no})">
	            		<td>${vacationCheck.vac_use_no}</td>
	            		<td>${vacationCheck.reason}</td>
	            		<td>${vacationCheck.apply_date}</td>
	            		<td>${vacationCheck.end_date}</td>
	            		<td>
	            			<c:if test="${vacationCheck.check_no == 1}">
	            				미결제
		            		</c:if>
		            		<c:if test="${vacationCheck.check_no == 2}">
		            			결제
		            		</c:if>
		            		<c:if test="${vacationCheck.check_no == 3}">
		            			반려
	            		</c:if>
						</td>
	            	</tr>
            </c:forEach>

        </table>
        </div>
    </form>
    </center>
    
	<form name="vacationCheckDetailForm" action="/vacationCheckDetail.do" method="post">
		<input type="hidden" name="vac_use_no" value="">
	</form>
    
</body>
</html>