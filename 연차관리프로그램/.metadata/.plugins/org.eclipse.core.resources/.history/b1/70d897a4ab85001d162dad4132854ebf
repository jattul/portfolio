<script>

	function applyCancel(){
		if(confirm("회수 하시겠습니까?")){
			$.ajax({
				url:"/vacationCancelProc.do"
				,type:"post"
				,data:$("[name='vacationApplyDetailForm']").serialize()
				,success:function(cancelCnt){
					if( cancelCnt==1 ) { 
						alert("휴가 회수 성공!")
						document.vacationMainForm.submit();
					} else {
						alert("휴가 회수 실패!")
					}
				}
				,error:function(){ alert("웹서버 접속 실패!") }
			})	
		}else{ return; }	
	}

	
	function goMain(){
		document.vacationMainForm.submit();	
	}
	
	
	
</script>
<style>
	.reason{
	 	width: 750px;
        height: 250px;
	}
